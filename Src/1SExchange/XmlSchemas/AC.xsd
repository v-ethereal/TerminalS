<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:simpleType name="RussianDate">
    <xs:restriction base="xs:string">
      <!-- dd.MM.yyyy -->
      <xs:pattern value="\d{2}\.\d{2}\.\d{4}" />
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="Act">
		<xs:complexType>
      <!-- Разделитель точка (.) -->
      <xs:attribute name="Sum" type="xs:decimal" use="required" />
			<xs:attribute name="Date" type="RussianDate" use="required"/>
			<xs:attribute name="ContractId" type="xs:int" use="required" />
			<xs:attribute name="Client1SCode" type="xs:string" use="required" />
		</xs:complexType>
	</xs:element>
</xs:schema>
