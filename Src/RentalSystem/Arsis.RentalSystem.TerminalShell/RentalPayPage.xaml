<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:UserControls="clr-namespace:Arsis.RentalSystem.TerminalShell.UserControls"
	x:Class="Arsis.RentalSystem.TerminalShell.RentalPayPage"
	Background="{DynamicResource PageBackgroundGradientBrush}"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="230" />
            <RowDefinition Height="100" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Оплата аренды торгового места" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" Foreground="#FFFFFFFF"/>
        <Border Grid.Row="1" Margin="0,50,0,0" HorizontalAlignment="Center" CornerRadius="15,15,15,15" Background="LightGoldenrodYellow" BorderThickness="3" BorderBrush="Black" Width="400">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Content="Номер места:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Foreground="Black"/>
                <Label Grid.Row="0" Grid.Column="1" x:Name="lblRentalPropertyNumber" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Foreground="Black" />
                <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Content="Номер договора:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Foreground="Black"/>
                <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Foreground="Black" x:Name="lblContract"/>
                <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Content="Тариф(руб.):" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Foreground="Black"/>
                <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Foreground="Black" x:Name="lblRate"/>
        </Grid>
        </Border>
        <Label Grid.Row="2" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Введите купюры в купюроприемник (по одной)" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="32" Foreground="#FF19147D"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Принято:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="32" Foreground="#FF19147D"/>
            <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="32" Foreground="#FF19147D" x:Name="lblEntered" />
            <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="руб." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="32" Foreground="#FF19147D"/>
        </StackPanel>
        <UserControls:PayProgressBar Grid.Row="4" Margin="0,10,0,0" x:Name="progressBar" VerticalAlignment="Top" Padding="10"  />
        <Label Grid.Row="5" Margin="0,10,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="ВНИМАНИЕ!" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="32" Foreground="Red"/>
        <TextBlock Grid.Row="6" x:Name="tbInformation" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Foreground="#FF8D0000" ScrollViewer.CanContentScroll="False" Focusable="False" IsHitTestVisible="False" />
        
        <Grid Grid.Row="7" Background="Black" Height="1"/>
        <Grid Grid.Row="8" Background="Transparent">
            <Button  HorizontalAlignment="Left" x:Name="btnCancel" Style="{DynamicResource BackButtonStyle}" Content="Button" VerticalAlignment="Center" Click="btnCancel_Click" />
            <Button x:Name="btnPay" Visibility="Hidden" Style="{DynamicResource PayButtonStyle}"  HorizontalAlignment="Center" Click="btnPay_Click" Opacity="0" />
        </Grid>
    </Grid>
</Page>