<Page x:Class="Arsis.RentalSystem.TerminalShell.ErrorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ErrorPage"
    Background="{DynamicResource PageBackgroundGradientBrush}">
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="58" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <TextBlock FontSize="36" Text="Извините, терминал временно не работает" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        
        <Grid Grid.Row="1">
            <TextBlock FontSize="16" Name="textBlockErrorMessage" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Padding="20" Background="Red" Foreground="White"/>
        </Grid>
        
        <Grid Background="#005F96" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button x:Name="btnAdminLogon" Style="{DynamicResource LogonButtonStyle}" HorizontalAlignment="Left" Click="btnAdminLogon_Click">
                <TextBlock Text="Вход для администратора" TextWrapping="Wrap" TextAlignment="Center" FontSize="15"/>
            </Button>
            <Label x:Name="lblClock"  Grid.Column="1" FontSize="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFFFFFFF" Margin="0,-7,0,0" />
            <Label Content="Ярмарочный Комплекс &quot;Домодедовский&quot;" Grid.Column="2" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="#FFFFFFFF" />
        </Grid>

    </Grid>
</Page>
