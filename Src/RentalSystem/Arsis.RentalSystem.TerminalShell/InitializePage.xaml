<Page x:Class="Arsis.RentalSystem.TerminalShell.InitializePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="InitializePage"
    Background="{DynamicResource PageBackgroundGradientBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Выберите необходимую операцию" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" Foreground="DarkBlue"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock Margin="10,0,10,0" Text="11" x:Name="tblErrorMessage" TextWrapping="Wrap"  HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"  FontSize="24" Foreground="White" Background="Red"/>
        </Grid>
       
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnZReport" Grid.Row="0" Grid.Column="0" Content="Z-отчет" Style="{DynamicResource MenuButtonStyle}" Click="btnZReport_Click" FontSize="32"/>
            <Button x:Name="btnReInitialize" Grid.Row="0" Grid.Column="1" Style="{DynamicResource MenuButtonStyle}" Click="btnReInitialize_Click" Content="Реинициализация" FontSize="32" >
            </Button>
            <Button x:Name="btnZeroReceipt" Grid.Row="1" Grid.Column="0" Style="{DynamicResource MenuButtonStyle}" Click="btnZeroReceipt_Click" Content="Нулевой чек" FontSize="32">
            </Button>
            <Button x:Name="btnCloseApp" Grid.Row="1" Grid.Column="1" Style="{DynamicResource MenuButtonStyle}" Click="btnCloseApp_Click" Content="Выход в ОС" FontSize="32">
            </Button>
        </Grid>
        <Grid Grid.Row="4">
            <Button HorizontalAlignment="Left" x:Name="btnLogoff" Style="{DynamicResource BackButtonStyle}"  VerticalAlignment="Center" Click="btnLogoff_Click" />
        </Grid>
    </Grid>
</Page>
