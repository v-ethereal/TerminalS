<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Arsis.RentalSystem.TerminalShell.UserControls.NumericKeyboard" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
        <Border CornerRadius="15" BorderBrush="#FF9696A9" BorderThickness="7" OpacityMask="#FFEE1A1A" Background="#FFC8C8C8">
            <Grid Background="#FFC8C8C8" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4,4,4,4" FontSize="56" MaxLength="8" BorderBrush="{DynamicResource ButtonBorder}" Background="{DynamicResource TextBoxBackgroundBrush}" x:Name="tbxValue" Focusable="False" IsHitTestVisible="False" IsTabStop="False" IsReadOnly="True" />
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Style="{DynamicResource KeyboardButtonStyle}" Content="1" x:Name="btnNr1" Click="btnNr1_Click" />
            <Button Grid.Row="0" Grid.Column="1" Style="{DynamicResource KeyboardButtonStyle}" Content="2" x:Name="btnNr2" Click="btnNr2_Click" />
            <Button Grid.Row="0" Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="3" x:Name="btnNr3" Click="btnNr3_Click" />

            <Button Grid.Row="1" Grid.Column="0" Style="{DynamicResource KeyboardButtonStyle}" Content="4" x:Name="btnNr4" Click="btnNr4_Click" />
            <Button Grid.Row="1" Grid.Column="1" Style="{DynamicResource KeyboardButtonStyle}" Content="5" x:Name="btnNr5" Click="btnNr5_Click" />
            <Button Grid.Row="1" Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="6" x:Name="btnNr6" Click="btnNr6_Click" />

            <Button Grid.Row="2" Grid.Column="0" Style="{DynamicResource KeyboardButtonStyle}" Content="7" x:Name="btnNr7" Click="btnNr7_Click" />
            <Button Grid.Row="2" Grid.Column="1" Style="{DynamicResource KeyboardButtonStyle}" Content="8" x:Name="btnNr8" Click="btnNr8_Click" />
            <Button Grid.Row="2" Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="9" x:Name="btnNr9" Click="btnNr9_Click" />

            <Button Grid.Row="3" Grid.Column="0" Style="{DynamicResource KeyboardButtonStyle}" Content="C" Foreground="#FFC80000" x:Name="btnClear" Click="btnClear_Click" />
            <Button Grid.Row="3" Grid.Column="1" Style="{DynamicResource KeyboardButtonStyle}" Content="0" x:Name="btnNr0" Click="btnNr0_Click" />
            <Button Grid.Row="3" Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="&lt;" Foreground="#FF00C800" Margin="4,4,4,4" x:Name="btnBackSpace" Click="btnBackSpace_Click" />
        </Grid>
    </Grid>
            </Border>
        </Grid>
</UserControl>
