<UserControl x:Class="Arsis.RentalSystem.TerminalShell.UserControls.PayProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="FullPaidBrush" EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#FFB4FFAB" Offset="0.7"/>
            <GradientStop Color="#FF1EFF00" Offset="0"/>
            <GradientStop Color="#FF1EFF00" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="NotPaidBrush" EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#E4FFBEAB" Offset="1"/>
            <GradientStop Color="#FFFF0000" Offset="0"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="PartialyPaidBrush" EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#FFFFD5AB" Offset="0.5"/>
            <GradientStop Color="#FF1EFF00" Offset="0"/>
            <GradientStop Color="#FFFF0000" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    <StackPanel x:Name="Workspace" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
    </StackPanel>
</UserControl>
