<UserControl x:Class="Arsis.RentalSystem.TerminalShell.UserControls.VirtualKeyboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border CornerRadius="15" BorderBrush="#FF9696A9" BorderThickness="7" OpacityMask="#FFEE1A1A" Background="#FFC8C8C8">
    <Grid Margin ="7" Background="#FFC8C8C8" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="8,4,0,4" FontSize="36" MaxLength="20" BorderBrush="{DynamicResource ButtonBorder}" Background="{DynamicResource TextBoxBackgroundBrush}" x:Name="tbxValue" Focusable="False" IsHitTestVisible="False" IsTabStop="False" IsReadOnly="True" Width="600" />
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button  Grid.Column="0" Style="{DynamicResource KeyboardButtonStyle}" Content="1" x:Name="btnr0c0"  Click="ClickHandler" />
            <Button Grid.Column="1" Style="{DynamicResource KeyboardButtonStyle}" Content="2" x:Name="btnr0c1" Click="ClickHandler" />
            <Button Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="3" x:Name="btnr0c2" Click="ClickHandler" />
            <Button  Grid.Column="3" Style="{DynamicResource KeyboardButtonStyle}" Content="4" x:Name="btnr0c3" Click="ClickHandler" />
            <Button  Grid.Column="4" Style="{DynamicResource KeyboardButtonStyle}" Content="5" x:Name="btnr0c4" Click="ClickHandler" />
            <Button Grid.Column="5" Style="{DynamicResource KeyboardButtonStyle}" Content="6" x:Name="btnr0c5" Click="ClickHandler" />
            <Button  Grid.Column="6" Style="{DynamicResource KeyboardButtonStyle}" Content="7" x:Name="btnr0c6" Click="ClickHandler" />
            <Button  Grid.Column="7" Style="{DynamicResource KeyboardButtonStyle}" Content="8" x:Name="btnr0c7" Click="ClickHandler" />
            <Button  Grid.Column="8" Style="{DynamicResource KeyboardButtonStyle}" Content="9" x:Name="btnr0c8" Click="ClickHandler" />
            <Button  Grid.Column="9" Style="{DynamicResource KeyboardButtonStyle}" Content="0" x:Name="btnr0c9" Click="ClickHandler" />
            <Button  Grid.Column="10" Style="{DynamicResource KeyboardButtonStyle}" x:Name="btnbsp" Click="btnbsp_Click" Margin="4">&lt;</Button>
                </Grid>
        <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Column="0" Style="{DynamicResource KeyboardButtonStyle}" Content="q" x:Name="btnr1c0" Click="ClickHandler" />
                <Button Grid.Column="1" Style="{DynamicResource KeyboardButtonStyle}" Content="w" x:Name="btnr1c1" Click="ClickHandler" />
                <Button Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="e" x:Name="btnr1c2" Click="ClickHandler" />
                <Button Grid.Column="3" Style="{DynamicResource KeyboardButtonStyle}" Content="r" x:Name="btnr1c3" Click="ClickHandler" />
                <Button Grid.Column="4" Style="{DynamicResource KeyboardButtonStyle}" Content="t" x:Name="btnr1c4" Click="ClickHandler" />
                <Button Grid.Column="5" Style="{DynamicResource KeyboardButtonStyle}" Content="y" x:Name="btnr1c5" Click="ClickHandler" />
                <Button Grid.Column="6" Style="{DynamicResource KeyboardButtonStyle}" Content="u" x:Name="btnr1c6" Click="ClickHandler" />
                <Button Grid.Column="7" Style="{DynamicResource KeyboardButtonStyle}" Content="i" x:Name="btnr1c7" Click="ClickHandler" />
                <Button Grid.Column="8" Style="{DynamicResource KeyboardButtonStyle}" Content="o" x:Name="btnr1c8" Click="ClickHandler" />
                <Button Grid.Column="9" Style="{DynamicResource KeyboardButtonStyle}" Content="p" x:Name="btnr1c9" Click="ClickHandler" />
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button  Grid.Column="0" Style="{DynamicResource KeyboardButtonStyle}" Content="a" x:Name="btnr2c0" Click="ClickHandler" />
                <Button  Grid.Column="1" Style="{DynamicResource KeyboardButtonStyle}" Content="s" x:Name="btnr2c1" Click="ClickHandler" />
                <Button  Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="d" x:Name="btnr2c2" Click="ClickHandler" />
                <Button  Grid.Column="3" Style="{DynamicResource KeyboardButtonStyle}" Content="f" x:Name="btnr2c3" Click="ClickHandler" />
                <Button  Grid.Column="4" Style="{DynamicResource KeyboardButtonStyle}" Content="g" x:Name="btnr2c4" Click="ClickHandler" />
                <Button  Grid.Column="5" Style="{DynamicResource KeyboardButtonStyle}" Content="h" x:Name="btnr2c5" Click="ClickHandler" />
                <Button  Grid.Column="6" Style="{DynamicResource KeyboardButtonStyle}" Content="j" x:Name="btnr2c6" Click="ClickHandler" />
                <Button  Grid.Column="7" Style="{DynamicResource KeyboardButtonStyle}" Content="k" x:Name="btnr2c7" Click="ClickHandler" />
                <Button Grid.Column="8" Style="{DynamicResource KeyboardButtonStyle}" Content="l" x:Name="btnr2c8" Click="ClickHandler" />
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.ColumnSpan="2" ClickMode="Press" Width="128" Style="{DynamicResource KeyboardButtonStyle}" Content="Shift" x:Name="btnShift" Click="btnShift_Click" />
                <Button Grid.Column="2" Style="{DynamicResource KeyboardButtonStyle}" Content="z" x:Name="btnr3c0" Click="ClickHandler" />
                <Button Grid.Column="3" Style="{DynamicResource KeyboardButtonStyle}" Content="x" x:Name="btnr3c1" Click="ClickHandler" />
                <Button Grid.Column="4" Style="{DynamicResource KeyboardButtonStyle}" Content="c" x:Name="btnr3c2" Click="ClickHandler" />
                <Button Grid.Column="5" Style="{DynamicResource KeyboardButtonStyle}" Content="v" x:Name="btnr3c3" Click="ClickHandler" />
                <Button Grid.Column="6" Style="{DynamicResource KeyboardButtonStyle}" Content="b" x:Name="btnr3c4" Click="ClickHandler" />
                <Button Grid.Column="7" Style="{DynamicResource KeyboardButtonStyle}" Content="n" x:Name="btnr3c5" Click="ClickHandler" />
                <Button Grid.Column="8" Style="{DynamicResource KeyboardButtonStyle}" Content="m" x:Name="btnr3c6" Click="ClickHandler" />
                    </Grid>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Column="1" Width="680" Style="{DynamicResource KeyboardButtonStyle}" Content="" x:Name="btnSpace" Click="btnSpace_Click" />
            </Grid>
        </StackPanel>
                <Button ClickMode="Press" Margin="0,4,4,4" Name="btnShift2" Style="{DynamicResource KeyboardButtonStyle}" Content="Shift" Click="btnShift_Click" HorizontalAlignment="Right" Grid.Row="4" Width="226" />
            </Grid>
            </Border>
            </Grid>
</UserControl>
