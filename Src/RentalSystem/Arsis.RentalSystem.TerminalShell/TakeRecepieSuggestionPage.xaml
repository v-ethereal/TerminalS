<Page x:Class="Arsis.RentalSystem.TerminalShell.TakeRecepieSuggestionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TakeRecepieSuggestionPage"
    Background="{DynamicResource PageBackgroundGradientBrush}">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock FontSize="48" Text="Пожалуйста, возьмите Ваш чек" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="#FF19147D" />
            <TextBlock FontSize="24" Text="Автоматический переход в главное меню произойдет через" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF19147D" />
            <Label x:Name="lblRedirectionTimer" HorizontalAlignment="Center"  VerticalAlignment="Center"  FontSize="24" Foreground="#FF19147D" Height="60" Width="121" HorizontalContentAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
