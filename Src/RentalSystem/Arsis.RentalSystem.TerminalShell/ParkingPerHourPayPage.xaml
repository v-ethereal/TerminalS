<Page x:Class="Arsis.RentalSystem.TerminalShell.ParkingPerHourPayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ParkingPerHourPayPage"
	Background="{DynamicResource PageBackgroundGradientBrush}" Unloaded="Page_Unloaded" Loaded="Page_Loaded">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
		
		</Grid>
		<Grid Grid.Row="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Grid Grid.Row="0" Grid.Column="0">
					<Label Content="Оплата парковки по карте № " HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="0" Grid.Column="1">
					<Label Name="label_ParkingTicket" Content="250" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="18" Foreground="DarkBlue" />
				</Grid>

				<Grid Grid.Row="1" Grid.Column="0">
					<Label Content="Наименование услуги:" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="1" Grid.Column="1">
					<Label Name="label_ServiceName" Content="ххххххххххх" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="2" Grid.Column="0">
					<Label Content="Время заезда:" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="2" Grid.Column="1">
					<Label Name="label_DateFrom" Content="21.07.09 12:10" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="3" Grid.Column="0">
					<Label Content="Время выезда:" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="3" Grid.Column="1">
					<Label Name="label_DateTo" Content="21.07.09 14:10" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="4" Grid.Column="0">
					<Label Content="Продолжительность стоянки (час.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="4" Grid.Column="1">
					<Label Name="label_TotalTime" Content="2" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="5" Grid.Column="0">
					<Label Content="Тариф (руб.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="5" Grid.Column="1">
					<Label Name="label_ServicePrice" Content="50" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="6" Grid.Column="0">
					<Label Content="Оплачено ранее (руб.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="6" Grid.Column="1">
					<Label Name="label_PaidSum" Content="50" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="7" Grid.Column="0">
					<Label Content="ИТОГО (руб.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
				</Grid>
				<Grid Grid.Row="7" Grid.Column="1">
					<Label Name="label_TotalSum" Content="500" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
				</Grid>
			</Grid>
		</Grid>
		<Grid Grid.Row="2">
			<Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="ВНИМАНИЕ!" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" Foreground="Red"/>	
		</Grid>
		<Grid Grid.Row="3">
			<TextBlock x:Name="textBlock_Information" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Foreground="DarkBlue" ScrollViewer.CanContentScroll="False" Focusable="False" IsHitTestVisible="False" />
		</Grid>
		<Grid Grid.Row="4">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid Grid.Row="0" Grid.Column="0">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<Grid Grid.Column="0">
							<Label Content="Принято:" HorizontalContentAlignment="Center" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="36" Foreground="DarkGreen" FontWeight="Normal" />
						</Grid>
						<Grid Grid.Column="1">
							<Label Name="label_FeeMoney" HorizontalContentAlignment="Center" Content="0000" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="36" Foreground="DarkGreen" FontWeight="Normal" />
						</Grid>
						<Grid Grid.Column="2">
							<Label Content="руб." HorizontalContentAlignment="Center" HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="36" Foreground="DarkGreen" FontWeight="Normal" />
						</Grid>
					</Grid>
				</Grid>
				<Grid Grid.Row="0" Grid.Column="1">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<Grid Grid.Column="0">
							<Label Content="Остаток:" HorizontalContentAlignment="Center" HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="36" Foreground="Red" FontWeight="Normal" />
						</Grid>
						<Grid Grid.Column="1">
							<Label Name="label_NeedMoney" HorizontalContentAlignment="Center" Content="1111" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="Red" FontSize="36" FontWeight="Normal" />
						</Grid>
						<Grid Grid.Column="2">
							<Label Content="руб." HorizontalContentAlignment="Center" HorizontalAlignment="Left"  VerticalAlignment="Center" FontSize="36" Foreground="Red" FontWeight="Normal" />
						</Grid>
					</Grid>
				</Grid>
			</Grid>
		</Grid>
		<Grid Grid.Row="5">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid Grid.Column="0">
					<Button Name="button_Back" Content="Отмена" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Click="button_Back_Click" Style="{DynamicResource BackButtonStyle}" Visibility="Visible"  />
				</Grid>
				<Grid Grid.Column="1">
                    <Button Name="button_Pay" Content="Оплатить"  HorizontalAlignment="Center"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="button_Pay_Click" Style="{DynamicResource PayButtonStyle}" Visibility="Hidden" Opacity="0" />
				</Grid>
				<Grid Grid.Column="2">
				</Grid>
			</Grid>
		</Grid>
	</Grid>
</Page>
