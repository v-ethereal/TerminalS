<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    x:Class="Arsis.RentalSystem.TerminalShell.MainPage"
    Background="{DynamicResource PageBackgroundGradientBrush}" Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="1" />
            <RowDefinition Height="58" />
       </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="gridWithButtons" Unloaded="gridWithButtons_Unloaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
				<RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Content="Оплата аренды" x:Name="btnRentalPayment" Style="{DynamicResource MenuButtonStyle}" Grid.Row="1" Click="btnRentalPayment_Click" />
            <Button Content="Прочие услуги" x:Name="btnOther" Style="{DynamicResource MenuButtonStyle}" Grid.Row="2" Click="btnOther_Click" />
			<Button Content="Парковка" x:Name="btnParking" Style="{DynamicResource MenuButtonStyle}" Grid.Row="3" Click="btnParking_Click" />
			<Label Content="" x:Name="labelMessage" Grid.Row="4" Foreground="Red" FontSize="30" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Background="Black" Grid.Row="1" />
        <Grid Grid.Row="2" Background="#005F96" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button x:Name="btnAdminLogon" Style="{DynamicResource LogonButtonStyle}" HorizontalAlignment="Left" Click="btnAdminLogon_Click">
                <TextBlock Text="Вход для администратора" TextWrapping="Wrap" TextAlignment="Center" FontSize="15" />
            </Button>
            <Label x:Name="lblClock"  Grid.Column="1" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFFFFFFF" />
            <Label Content="Ярмарочный Комплекс &quot;Домодедовский&quot;" Grid.Column="2" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="#FFFFFFFF" />
        </Grid>
    </Grid>
</Page>
