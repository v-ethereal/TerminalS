<Page x:Class="Arsis.RentalSystem.TerminalShell.ParkingWithCardServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ParkingWithCardServicePage"
    Background="{DynamicResource PageBackgroundGradientBrush}" Unloaded="Page_Unloaded" Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
			<RowDefinition Height="100" />
        </Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid Name="gridWithButtons">
				<Grid.RowDefinitions>
					<RowDefinition Height="auto" />
                    <RowDefinition Height="50" />
					<RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
				</Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1" Grid.Column="0">
                            <Label Content="Парковочная карта № " HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Label Name="label_ParkingTicket" Content="250" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        
                        <Grid Grid.Row="2" Grid.Column="0">
                            <Label Content="Время заезда:" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1">
                            <Label Name="label_DateFrom" Content="21.07.09 12:10" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="0">
                            <Label Content="Время выезда:" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Label Name="label_DateTo" Content="21.07.09 14:10" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="4" Grid.Column="0">
                            <Label Content="Продолжительность стоянки (час.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="4" Grid.Column="1">
                            <Label Name="label_TotalTime" Content="2" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="5" Grid.Column="0">
                            <Label Content="Тариф (руб.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="5" Grid.Column="1">
                            <Label Name="label_ServicePrice" Content="50" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="6" Grid.Column="0">
                            <Label Content="Оплачено ранее (руб.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="6" Grid.Column="1">
                            <Label Name="label_PaidSum" Content="50" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="7" Grid.Column="0">
                            <Label Content="ИТОГО (руб.):" HorizontalContentAlignment="Right" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                        <Grid Grid.Row="7" Grid.Column="1">
                            <Label Name="label_TotalSum" Content="500" HorizontalContentAlignment="Left" FontSize="18" Foreground="DarkBlue" />
                        </Grid>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                </Grid>


                <Grid Grid.Row="2">
                    <Button Content="Оплатить здесь" x:Name="btnPayLocal" Style="{DynamicResource MenuButtonStyle}" Click="btnPayLocal_Click" FontSize="30" Padding="20"/>
                </Grid>

                <Grid Grid.Row="3">
                    <Button Content="Оплата на внешнем терминале" x:Name="btnPayOnExternalTerminal" Style="{DynamicResource MenuButtonStyle}" Click="btnPayOnExternalTerminal_Click" FontSize="30" Padding="20"/>
                </Grid>

                <Grid Grid.Row="4">
                    <Button Content="Извлечь карту" x:Name="btnEjectCard" Style="{DynamicResource MenuButtonStyle}" FontSize="30" Click="btnEjectCard_Click"  Padding="20" Visibility="Hidden" />
                </Grid>


                <Grid Grid.Row="5">
                <Label Content="Авторизируйтесь в течение 10 сек ..." x:Name="labelMessage" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Red" FontSize="30" Visibility="Hidden" />    
                </Grid>
                
            </Grid>
		</Grid>

		<Button HorizontalAlignment="Left" x:Name="btnBack" Grid.Row="1" Style="{DynamicResource BackButtonStyle}"  VerticalAlignment="Center" Click="btnBack_Click" />
    </Grid>
</Page>
